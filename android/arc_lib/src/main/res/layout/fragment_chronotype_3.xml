<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_below="@+id/textView3"
        android:layout_above="@+id/textView8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewChronotype3Subheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginLeft="@dimen/frame_vertical"
                android:layout_marginRight="@dimen/frame_vertical"
                android:layout_marginTop="@dimen/header_below"
                android:text="@string/chronotype_subheader_work"
                android:textColor="@color/primary"
                android:textSize="28dp" />

            <com.dian.arc.libs.custom.Question
                android:id="@+id/questionChronotype3Sleep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:button_text="@string/choose_time"
                app:text="@string/chronotype_body_sleep">

            </com.dian.arc.libs.custom.Question>

            <com.dian.arc.libs.custom.Question
                android:id="@+id/questionChronotype3Wake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:button_text="@string/choose_time"
                app:hide_separator="true"
                app:text="@string/chronotype_body_wake">

            </com.dian.arc.libs.custom.Question>


        </LinearLayout>


    </ScrollView>


    <TextView
        android:id="@+id/textView"
        style="@style/TextHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/header_below"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:layout_marginTop="@dimen/header_above"
        android:text="@string/chronotype_header"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:background="@color/grey" />

    <com.dian.arc.libs.custom.FancyButton
        android:id="@+id/fancybuttonChronotype3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:elevation="6dp"
        android:padding="20dp"
        android:text="@string/next" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:background="@color/grey"
        android:layout_above="@+id/fancybuttonChronotype3"
        android:layout_alignParentStart="true" />

</RelativeLayout>
