<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textviewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fancybuttonPriceTop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/between_cluster"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:ellipsize="end"
        android:paddingBottom="8dp"
        android:text="Cantaloupe?"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="35sp" />

    <com.dian.arc.libs.custom.FancyButton
        android:id="@+id/fancybuttonPriceBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/fancybuttonPriceTop"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:text="$5.72"
        app:rounded="true" />

    <com.dian.arc.libs.custom.FancyButton
        android:id="@+id/fancybuttonPriceTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/toggle_spacing"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:text="$1.51"
        app:rounded="true" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textviewFood"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/toggle_spacing"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:text="@string/price_test_wasprice" />

    <FrameLayout
        android:id="@+id/frameHide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_app"
        android:visibility="gone">

    </FrameLayout>

</RelativeLayout>
