<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textviewQuestionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fancyButton6"
        android:layout_alignStart="@+id/fancyButton6"
        android:layout_below="@+id/textView17"
        android:layout_marginBottom="@dimen/toggle_spacing"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:layout_marginTop="@dimen/between_cluster"
        android:text="@string/wakeup_0_q1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.dian.arc.libs.custom.FancyButton
            android:id="@+id/fancybuttonQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewQuestionText"
            android:layout_marginLeft="@dimen/frame_vertical"
            android:layout_marginRight="@dimen/frame_vertical"
            android:text="@string/choose_answer"
            android:visibility="visible"
            app:rounded="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/frame_vertical"
            android:layout_marginRight="@dimen/frame_vertical">

            <TextView
                android:id="@+id/textviewQuestionValueEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                android:text="@string/chronotype_edit"
                android:textAlignment="textEnd"
                android:textColor="@color/primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textviewQuestionValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/textviewQuestionValueEdit"
                android:layout_weight="1"
                android:textColor="@color/primary" />
        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/textviewQuestionSeparator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/border"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/frame_vertical"
        android:layout_marginRight="@dimen/frame_vertical"
        android:layout_marginTop="@dimen/between_cluster"
        android:background="@color/grey" />

</LinearLayout>

