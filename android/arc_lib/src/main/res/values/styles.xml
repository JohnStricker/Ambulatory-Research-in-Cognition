<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:windowBackground">@drawable/background_app</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">17dp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="TextHeader" parent="AppTheme">
        <item name="android:textColor">@color/headerGrey</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>

    </style>

    <style name="TimePicker" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="android:textColorSecondary">@color/primary</item>
        <item name="android:textColor">@color/text</item>
    </style>

</resources>
